{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    // Override output settings for typecheck-only
    "noEmit": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "inlineSources": false,
    // Add DOM types for examples
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*", "tests/**/*", "examples/**/*"],
  "exclude": ["node_modules", "dist", "bench", "_site"]
}
