{
  "name": "balises",
  "version": "0.2.0",
  "description": "A very simple reactive html templating library",
  "author": "Julien Elbaz <elbywan@hotmail.com>",
  "type": "module",
  "keywords": [
    "html",
    "reactive",
    "template"
  ],
  "files": [
    "dist"
  ],
  "license": "MIT",
  "main": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "types": "./dist/esm/index.d.ts"
    },
    "./bundle": {
      "import": "./dist/balises.esm.js",
      "types": "./dist/esm/index.d.ts"
    },
    "./signals": {
      "import": "./dist/esm/signals/index.js",
      "types": "./dist/esm/signals/index.d.ts"
    },
    "./signals/signal": {
      "import": "./dist/esm/signals/signal.js",
      "types": "./dist/esm/signals/signal.d.ts"
    },
    "./signals/computed": {
      "import": "./dist/esm/signals/computed.js",
      "types": "./dist/esm/signals/computed.d.ts"
    },
    "./signals/store": {
      "import": "./dist/esm/signals/store.js",
      "types": "./dist/esm/signals/store.d.ts"
    },
    "./signals/context": {
      "import": "./dist/esm/signals/context.js",
      "types": "./dist/esm/signals/context.d.ts"
    },
    "./template": {
      "import": "./dist/esm/template.js",
      "types": "./dist/esm/template.d.ts"
    },
    "./parser": {
      "import": "./dist/esm/parser.js",
      "types": "./dist/esm/parser.d.ts"
    }
  },
  "scripts": {
    "build": "rm -rf dist && tsc && rolldown -c",
    "test": "node --import tsx/esm --import ./tests/setup.ts --test tests/*.test.ts",
    "lint": "eslint .",
    "pretty": "prettier --write .",
    "examples": "rolldown -c examples/rolldown.config.ts && yarn dlx serve examples",
    "examples:build": "rolldown -c examples/rolldown.config.ts",
    "bench": "cd bench && yarn && yarn start",
    "bench:self": "cd bench && yarn && yarn start:self",
    "docs": "yarn docs:build && yarn dlx serve _site",
    "docs:build": "yarn build && yarn examples:build && rm -rf _site && mkdir -p _site/assets && cp docs/index.html _site/ && cp assets/logo.svg _site/assets/ && cp -r examples _site/examples && cp dist/balises.esm.js _site/examples/"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@types/jsdom": "27.0.0",
    "@types/node": "25.0.3",
    "eslint": "9.39.2",
    "jsdom": "27.4.0",
    "prettier": "3.7.4",
    "rolldown": "1.0.0-beta.57",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.50.1"
  }
}
